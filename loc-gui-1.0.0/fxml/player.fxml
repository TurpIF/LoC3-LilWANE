<?xml version="1.0" encoding="UTF-8"?>

<?import com.d2si.loc.gui.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.canvas.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.d2si.loc.gui.PlayerController">
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
	</padding>
	<top>
		<HBox alignment="CENTER" spacing="8.0">
			<Button fx:id="playButton" text="Play" onAction="#doPlay" />
			<Button fx:id="pauseButton" text="Pause" onAction="#doPause" />
			<Button fx:id="previousButton" text="Previous" onAction="#doPrevious" />
			<Button fx:id="nextButton" text="Next" onAction="#doNext" />
			<Button fx:id="stopButton" text="Stop" onAction="#doStop" />
			<Button fx:id="fastButton" text="Fast" onAction="#doFastPlay" />
		</HBox>
	</top>

	<center>
		<fx:include fx:id="panel" source="panel.fxml" />
	</center>

	<bottom>
		<BorderPane>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
			<left>
				<HBox alignment="CENTER_LEFT" spacing="8.0">
					<Label text="Turn number:" />
					<Label fx:id="turnNumberLabel" text="0" />
					<Separator orientation="VERTICAL" />
				</HBox>
			</left>
			<center>
        <HBox alignment="CENTER" spacing="8.0">
          <Label text="Map:" />
          <TextField fx:id="mapNameField" text="" editable="false" minWidth="500" />
          <Separator orientation="VERTICAL" />
        </HBox>
      </center>
			<right>
				<HBox alignment="CENTER_RIGHT" spacing="8.0">
					<Separator orientation="VERTICAL" />
					<Label fx:id="winnerNameLabel" text="" />
				</HBox>
			</right>
		</BorderPane>
	</bottom>
</BorderPane>